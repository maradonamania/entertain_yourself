<%# フォローボタン %>
<% unless current_user.id == @user.id %>
<div class="follow-button">
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit "#{@user.nickname}さん(フォロー中:#{@user.followings.count}フォロワー:#{@user.followers.count})のフォローをやめる", class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit "#{@user.nickname}さん(フォロー中:#{@user.followings.count}フォロワー:#{@user.followers.count})をフォローする", class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
</div>
<% end %>





